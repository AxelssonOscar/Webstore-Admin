@model Webstore_Admin.ViewModel.DashboardViewModel


<div class="container p-1">
    <div class="col-md-8 offset-md-2 p-1">
        <div class="mx-auto p-4">
            <h1 class="text-secondary font-weight-light" style="text-align: center">Dashboard</h1>
        </div>
    </div>

    @*Row 1, Card 1*@
    <div class="row">
        <div class="card bg-light m-2 w-25 col-sm">
            <div class="card-body p-3">
                <h4 class="card-title" style="text-align:center">Low Stock Products</h4>
                <table>
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>In stock</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Product product in Model.LowStockProducts)
                        {
                            <tr>
                                <td> @product.Name</td>
                                <td style="text-align:center"> @product.UnitsInStock</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @*Row 1, Card 2*@
        <div class="card bg-light m-2 w-25 col-sm">
            <div class="card-body p-3">
                <h4 class="card-title">Top customer last month</h4>
                <table>
                    <thead>
                        <tr>
                            <th style="text-align:center">ID</th>
                            <th style="text-align:center">Name</th>
                            <th style="text-align:center">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td> #@Model.TopCustomer.Item1.Id</td>
                            <td>
                                <a asp-controller="Customer" asp-action="Index"
                                   asp-route-customerId="@Model.TopCustomer.Item1.Id">@Model.TopCustomer.Item1.Name</a>
                            </td>
                            <td>@Model.TopCustomer.Item2 kr</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

