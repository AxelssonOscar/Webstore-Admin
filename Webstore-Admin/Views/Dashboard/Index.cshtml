@model Webstore_Admin.ViewModel.DashboardViewModel


<div class="container p-1">
    <div class="col-md-8 offset-md-2 p-1">
        <div class="p-4">
            <h1 class="display-4 text-center">Dashboard</h1>
        </div>
    </div>

    @*---Row 1, Card 1---*@
    <div class="row">
        <div class="card bg-light m-2 w-25 col-sm">
            <div class="card-body p-3">
                <h4 class="card-title" style="text-align:center">Low Stock Products</h4>
                <table class="w-100">
                    <thead>
                        <tr>
                            <th class="w-50">Product</th>
                            <th class="w-50" style="text-align:center">In stock</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Product product in Model.LowStockProducts)
                        {
                            <tr>
                                <td> @product.Name</td>
                                <td style="text-align:center"> @product.UnitsInStock</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @*---Row 1, Card 2---*@
        <div class="card bg-light m-2 w-25 col-sm">
            <div class="card-body p-3">
                <h4 class="card-title">Top 5 customer last month</h4>
                <table class="w-100">
                    <thead>
                        <tr>
                            <th style="text-align:center">ID</th>
                            <th style="text-align:center">Name</th>
                            <th style="text-align:center">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (KeyValuePair<Customer, decimal?> data in Model.TopCustomer)
                        {
                            <tr>
                                <td style="text-align:center"> #@data.Key.Id</td>
                                <td style="text-align:center"> <a asp-controller="Customer" asp-action="Index" asp-route-customerId="@data.Key.Id">@data.Key.Name</a></td>
                                <td style="text-align:center">  @data.Value kr</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

