@model PaginatedList<Discount>

@{
    ViewData["Title"] = "Discounts";
}


<div class="container p-1">
    <div class="col-md-8 offset-md-2 p-1">
        <div class="p-4">
            <h1 class="display-4 text-center">Discounts</h1>
        </div>
        
        <div class="pb-2 text-right">
            <a asp-controller="Discount" asp-action="Create" class="btn btn-success pl-3">
                <i class="bi-plus-circle"></i>
                Create New Discount
            </a>
        </div>
    </div>

    <div class="col-md-8 offset-md-2 p-1">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Percent</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Active</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (Discount discount in Model)
                {
                <tr>
                    <td class="align-middle">@discount.Name</td>
                    <td class="align-middle">@discount.Percent</td>
                    <td class="align-middle">@Html.DisplayFor(x => discount.StartDate)</td>
                    <td class="align-middle">@Html.DisplayFor(x => discount.EndDate)</td>
                    <td class="align-middle">
                        @if (discount.StartDate < DateTime.Now && discount.EndDate > DateTime.Now)
                        {
                            <h5>Active</h5>
                        }
                    </td>
                    <td class="align-middle">
                                <a class="btn btn-outline-primary" asp-controller="Discount" asp-action="Details" asp-route-discountId="@discount.Id">Details</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
