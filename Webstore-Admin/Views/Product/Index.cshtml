@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-secondary font-weight-light" style="text-align: center">Products</h1>
        </div><br />
        <div class="col-6 text-right">
            <a asp-controller="Product" asp-action="Create" class="btn btn-success"><i class="bi-plus-circle"></i>
                Create New Product
            </a>
        </div>
    </div>


    <div class="row">
        <div class="col-md-8 offset-md-2">
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(x => x.Name)</th>
                        <th>@Html.DisplayNameFor(x => x.Price)</th>
                        <th>@Html.DisplayNameFor(x => x.UnitsInStock)</th>
                        <th>@Html.DisplayNameFor(x => x.Category)</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (Product product in Model)
                    {
                        <tr>
                            <td class="align-middle">@product.Name</td>
                            <td class="align-middle">@product.Price.ToString("c")</td>
                            <td class="align-middle">@product.UnitsInStock</td>
                            <td class="align-middle">@product.Category.Name</td>

                            <td class="align-middle">
                                <a class="btn btn-outline-primary" asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                                @*| <a class="btn btn-danger" asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id">Delete</a>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
