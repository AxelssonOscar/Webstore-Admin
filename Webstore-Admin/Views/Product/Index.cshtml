@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products -";
}

<div class="container p-1">
    <div class="col-md-8 offset-md-2 p-1">
        <div class="p-4">
            <h1 class="display-4 text-center">Products</h1>
        </div>
        <div class="pb-2 text-right">
            <a asp-controller="Product" asp-action="Create" class="btn btn-success pl-3"><i class="bi-plus-circle"></i>
                Create New Product
            </a>
        </div>
    </div>

    <div class="col-md-8 offset-md-2 p-1">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(x => x.Name)</th>
                    <th>@Html.DisplayNameFor(x => x.Price)</th>
                    <th>@Html.DisplayNameFor(x => x.UnitsInStock)</th>
                    <th>@Html.DisplayNameFor(x => x.Category)</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (Product product in Model)
                {
                    <tr> 
                        <td class="align-middle">@product.Name</td>
                        <td class="align-middle">@product.Price kr</td>
                        <td class="align-middle">@product.UnitsInStock</td>
                        <td class="align-middle">@product.Category.Name</td>

                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
